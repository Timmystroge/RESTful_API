<%- include("partials/header"); -%>
<div class="col-lg-9 mx-auto">
  <h3>Compose</h3>
  <form action="/compose" method="post" class="pt-2">
    <div class="row">
      <div class="form-group my-2">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          name="title"
          id="title"
          class="form-control"
          required
          autocomplete="off"
          autofocus
          placeholder="Post Title"
        />
      </div>
      <div class="form-group my-2">
        <label for="content" class="form-label">Content:</label>
        <textarea
          name="content"
          placeholder="Post Content"
          id="content"
          cols="20"
          rows="6"
          class="form-control"
          required
          autocomplete="off"
        ></textarea>
      </div>
    </div>
    <div class="d-flex justify-content-between">
      <button type="subimit" class="btn btn-primary mt-2">Publish</button>
      <a href="/"><button type="button" class="btn btn-danger mt-2">Back</button></a>
    </div>
  </form>
</div>
<%- include("partials/footer"); -%>
