<%- include("header") -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <!-- Loop Through todo list and display to client] -->
  <% for(i = 0; i < todoLists.length; i++ ){ %>
  <div class="item">
    <input type="checkbox" />
    <p><%= todoLists[i] %></p>
  </div>
  <% } %>

  <form action="/" method="POST" class="item">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      required
      autofocus
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
